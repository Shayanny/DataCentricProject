<style>
    table {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }
    .back-link {
        margin-top: 20px;
        text-align: center;
    }
    .error-message {
        margin-top: 20px;
        font-size: 18px;
        color: black;
    }

</style>

<% if (error) { %>
    <div class="error-message">
        <h1>Error Message</h1>
        <p>
            <p>Cannot delete lecturer <%= lecturer._id %>. He/She has associated modules.</p>
        </p>
        <div class="back-link"></div>
            <a href="/">Home</a>
        </div>
    </div>
    <% }else { %>
        <h1>Delete Lecturer</h1>
        <p>Are you sure you want to delete the following lecturer?</p>
        <table>
            <tr>
                <th>ID</th>
                <td>
                    <%= lecturer._id %>
                </td>
            </tr>
        <tr>
            <th>Name</th>
            <td><%= lecturer.name %></td>
        </tr>
        <tr>
            <th>Department ID</th>
            <td><%= lecturer.did %></td>
        </tr>
    </table>
    <div class="buttons">
        <form action="/lecturers/delete/<%= lecturer._id %>" method="POST" style="display: inline;">
            <button type="submit" class="confirm">Delete</button>
        </form>
        <a href="/lecturers">
            <button type="button" class="cancel">Cancel</button>
        </a>
    </div>
    <% } %>
