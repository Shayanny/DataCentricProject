<style>
    table {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }
    .back-link {
            margin-top: 20px;
            text-align: center;
        }

</style>

<h1>Add Student</h1>
<% if (error && error.length > 0) { %>
    <div class="error-message">
        <p>
            <p>Cannot use <%= student.sid %> it is already taken.</p>
        </p>
    </div>
    <% } %>
    <div class="back-link"></div>
        <a href="/">Back to Home</a>
    </div>
    <form action="/students/add" method="POST">
        <table>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
            <tr>
                <td>Student ID</td>
                <td>
                    <input type="text" id="sid" name="sid" value="<%= student.sid %>" minlength="4" maxlength="4" required>

                </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" id="name" name="name" value="<%= student.name %>" minlength="2" required>
                </td>
            </tr>
            <tr>
                <td>Age</td>
                <td>
                    <input type="number" id="age" name="age" value="<%= student.age %>" min="18" required>
                </td>
            </tr>
        </table>
        <div style="text-align: center; margin-top: 10px;"></div>
                <button type="submit">Add</button>
            </div>
    </form>